svg.glow(width='100%', height='100%', viewbox='0 0 1000 1000', xmlns='http://www.w3.org/2000/svg')
	defs
		filter#blur1(x="-50%" y="-50%" width="200%" height="200%")
			fegaussianblur(in="SourceGraphic" stddeviation="10" out="blur")
		filter#blur2(x="-50%" y="-100%" width="200%" height="300%")
			fegaussianblur(in="SourceGraphic" stddeviation="30" out="blur")
	ellipse#glowWide(filter="url(#blur2)" cx="500" cy="400" rx="500" ry="50")
	ellipse#glowSlim(filter="url(#blur1)" cx="500" cy="400" rx="500" ry="30")

